\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamerouterthemeUNIZA}[14/10/2015 The University of Zilina Theme]

%-----------------------------------------------
%					Packages
%-----------------------------------------------

\RequirePackage{tikz}

\RequirePackage[absolute,overlay]{textpos}

\RequirePackage{calc}
\newlength\tmpunizalength

%-----------------------------------------------
%					Options
%-----------------------------------------------

%\DeclareOptionBeamer{optionname}{... #1}
\DeclareOptionBeamer{shownavsym}{\def\beamer@shownavsym{true}}
\ProcessOptionsBeamer

%-----------------------------------------------
%					Lengths
%-----------------------------------------------

\newlength{\beamer@height}
\usebeamerfont{frametitle} % use the frame title font
\setlength{\beamer@height}{2.5\baselineskip}
\reset@font % reset the font back to default

%-----------------------------------------------
%					Layout
%-----------------------------------------------

% for all except the article mode
\mode<presentation>
  
\setbeamertemplate{headline}{}
  
%frame title
\setbeamertemplate{frametitle}
{

\begin{textblock}{0.5}(1.15,0.001)
\begin{beamercolorbox}[wd=1.7cm,ht=1.7cm,center,sep=0.1cm]{logobox@outer}
	\begin{beamercolorbox}[wd=1.5cm,ht=1.5cm,center]{logobox}
	\includegraphics[width=1.49cm]{\logoimage}
	\end{beamercolorbox}
\end{beamercolorbox}
\end{textblock}

\setlength{\tmpunizalength}{\paperwidth-4cm}

\begin{textblock}{0.5}(3,0.001)
\begin{minipage}[c][1.5cm][c]{\tmpunizalength}
  {\usebeamercolor[fg]{frametitle}\usebeamerfont{frametitle}\insertframetitle\par}
  {\usebeamercolor[fg]{framesubtitle}\usebeamerfont{framesubtitle}\insertframesubtitle\par}
\end{minipage}~
\begin{minipage}[c][1.5cm][c]{1cm}
	\raggedleft
  {\usebeamercolor[fg]{frametitle}\usebeamerfont{framenumber}
	  \insertframenumber/\inserttotalframenumber
	}
\end{minipage}
\end{textblock}

\begin{beamercolorbox}[wd=\paperwidth,ht=1.5cm]{frametitle}
\end{beamercolorbox}
}

\ifx\beamer@shownavsym\undefined
\setbeamertemplate{navigation symbols}{
  %disable navigation symbols
}
\fi

\mode<all>
