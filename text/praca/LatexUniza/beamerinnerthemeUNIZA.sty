\newcommand{\titletextcolwidth}{0.5\textwidth}
\newcommand{\titleimagecolwidth}{0.5\textwidth}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%beamer specific options
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\newcommand{\titlepagecontent}{
	\begin{columns}
	\begin{column}{\titletextcolwidth}
	\begin{minipage}[c][0.7\textheight][t]{\columnwidth}
		\centering
		
		\vss
 		  			
		{\usebeamerfont{institute}\insertinstitute}				
		\vss
		
		{\usebeamerfont{date}\insertdate}
		
		\vss
    	
    	{\usebeamerfont{author}\insertauthor}
    	
    	\vss
	\end{minipage}
	\end{column}
	\begin{column}{\titleimagecolwidth}
	\begin{minipage}[c][0.7\textheight][t]{\columnwidth}
	\mbox{}\vfill
	
	\centering
	\introimage
	
	\vfill \mbox{}
	\end{minipage}
	\end{column}
	\end{columns}
}

\mode<presentation>%refers to the first four modes (beamer,handout,second and trans). That is, to all modes except the article mode
{
	\setbeamerfont{institute}{series=\normalsize\bf}
	
	\setbeamertemplate{title page}{
	
	\setlength{\tmpunizalength}{\paperwidth-4cm}
	
	\begin{textblock}{0.5}(4.5,0.75)
	\begin{minipage}[c][2.7cm][c]{\tmpunizalength}
		\centering
		{\usebeamerfont{title}\usebeamercolor[fg]{title}\inserttitle}
		\\[0.5em]
		{\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle}
	\end{minipage}
	\end{textblock}
  
	\vspace{0.25cm}
	\begin{beamercolorbox}[wd=\paperwidth,leftskip=0.5cm,rightskip=0.3cm,ht=2.5cm]{frametitle}
	
	\hbox{
	\begin{beamercolorbox}[wd=2.8cm,ht=2.8cm,center,sep=0.15cm]{logobox@outer}
	\begin{beamercolorbox}[wd=2.5cm,ht=2.5cm,center]{logobox}
	\includegraphics[width=2.49cm]{\logoimage}
	\end{beamercolorbox}
	\end{beamercolorbox}
	}
	
	\end{beamercolorbox}
	
	\titlepagecontent
  }
  
  %final page
  \defbeamertemplate{final page}{text}[1]{%
	\Large
    \begin{minipage}[c][\textheight][c]{\textwidth}
      \centering
      \vfill
      \begin{beamercolorbox}[wd=\textwidth,center,sep=2\baselineskip]{frametitle}
          #1
      \end{beamercolorbox}
      \vfill
      {\inserttitlegraphic}\vspace*{\baselineskip}
    \end{minipage}
  }
  \newcommand{\finalpage}[1]{%
    \setbeamertemplate{final page}[text]{#1}
    \usebeamertemplate{final page}
  }
  
  % add the intro image to the background
  \newcommand{\introbg}{}
  
  % use numbers instead of a picture for the references
  \setbeamertemplate{bibliography item}[text]

}%end of beamer specific options

\mode<all>
